
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaProject</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Serif:opsz,wght@8..144,100;8..144,200;8..144,300;8..144,400;8..144,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/CinemaProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <header class="header_main-extral">
         <nav class="app_nav navbar navbar-expand-lg navbar-dark ftco_navbar ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <div class="container_left">
                    <a class="navbar-brand fas fa-infinity" asp-area="" asp-controller="Home" asp-action="Index">Amovie.</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    @* <form action="#" class="searchform order-sm-start order-lg-last">
                        <div class="form-group d-flex">
                        <input type="text" class="form-control pl-3" placeholder="Search" fdprocessedid="fje3h6">
                        <button type="submit" placeholder="" class="form-control search" fdprocessedid="y3k9cg"><span class="fa fa-search"></span></button>
                        </div>
                    </form> *@
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav m-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" is-active-route asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" is-active-route asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Contact" is-active-route asp-controller="Contact" asp-action="SendContact">Liên Hệ</a>
                            </li>
                        </ul>
                    </div>
                </div>

               <div class="container_right">
                    <div class="Search_Control NoActive">
                        <input class="Search_Control-input" type="text" placeholder="Tên phim, diễn viên, thể loại" >
                        <div class="Search_Control-icon">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                    </div>
                    <partial name="_MenuManage" />  
                    <partial name="_LoginPartial" />
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container container_main">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CinemaProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

