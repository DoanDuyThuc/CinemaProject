@model VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "Xác nhận số điện thoại";
    Layout = "_LayoutExtra";
}

<form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal SendCode-Container" role="form">
    <input asp-for="PhoneNumber" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="AddPhoneNumber-Container_Group">
        <label asp-for="Code" ></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="AddPhoneNumber-Container_Group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Gửi</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}